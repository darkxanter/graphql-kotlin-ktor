root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,vue,json}]
ij_continuation_indent_size = 2
indent_size = 2

[*.{yml, yaml}]
ij_continuation_indent_size = 2
indent_size = 2
